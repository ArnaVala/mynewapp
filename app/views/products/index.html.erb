  <div class="container-fluid white-bg pad-top-half pad-bottom-half">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-lg-4 col-md-6 col-md-12 prod-info">
          <%= link_to image_tag(product.image_url, class: "img-responsive"), product %>         
          <h5><%= product.name %></h5>
          <p><%= product.description %></p>
          <span id="prod-details"><%= link_to 'Show', product %></td>
          <span id="prod-details"><%= link_to 'Edit', edit_product_path(product) %></td>
          <span id="prod-details"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </div><!--row -->
      <% end %>
    </div>
  </div> <!--end container -->
</section>

