<section id="prod-database">
  <div class="container pad-top-half pad-bottom-half prod-database">
    <div class="row">
      <div class="col-md-5 col-sm-12">
        <h2>Products</h2>
      </div>
      <div class="col-md-5 col-md-offset-2 col-sm-12">
        <h5 class="">This is the Bike Berlin product database.</h5>
      </div>
    </div>
  </div>
  
  <div class="container pad-top-half pad-bottom-half prod-display">
    <div class="row">
      <% cache(cache_key_for_products) do %>
        <%= render @products %>
      <% end %>
    </div>
  </div>
  <%= link_to 'New Product', new_product_path %>
</section>

