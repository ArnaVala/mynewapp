
<section id="new-product">
	<div class="container pad-top-half pad-bottom-half new-product">
		<div class="row">
			<div class="col-md-5 col-sm-12">
				<h2>Editing Product</h2>
			</div>
			<div class="col-md-5 col-md-offset-2 col-sm-12">
				<h5 class="">Here you can edit the product information.</h5>
			</div>
		</div>
	</div>
	<div class="container lightgrey-bg pad-sides pad-top-half pad-bottom-half prod-form">
		<div class="row">
			<div class="col-sm-12 pad lightgrey-bg">
				<form>
				<%= render 'form', product: @product %>
				</form>
			</div>
		</div>
	</div>
	<div class="container pad-top-half pad-bottom-half new-button">
    	<button class="btn">
      		<a><%= link_to 'Show', @product %></a>
    	</button>
    	<button class="btn">
      		<a><%= link_to 'Back', products_path %></a>
    	</button>
  	</div>
</section