<p id="notice"><%= notice %></p>
<section id="prod-show">
  <div class="container pad-top-half pad-bottom-half prod-show">
    <div class="row">
      <div class="col-md-5 col-sm-12">
        <h2>Product Info</h2>
      </div>
      <div class="col-md-5 col-md-offset-2 col-sm-12">
        <h5 class="">Here you can find more detailed info about the bike.</h5>
      </div>
    </div>
  </div>

  <div class="container white-bg pad-top-half pad-bottom-quarter">
		<div class="row bikes">
			<div class="col-md-7 col-sm-12 prod-info">
				<%= link_to image_tag(@product.image_url, class: "img-responsive") %>
			</div>
			<div class="col-md-5 col-sm-12 bike-text">
				<h3 id="prod-title"><%= @product.name %></h3>
        <hr class="style3">
        <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div></p>
        <hr class="style2">
        <p><strong><%= @product.description %></strong></p>
        <hr class="style2">
        <p><%= @product.colour %></p>       
        <hr class="style1">
        <p id="prod-price"><%= @product.price %>â‚¬</p>
			</div>
      <div class="user-comments col-md-7 col-sm-12">
          <%= render "products/new_comment" %>
          <%= render "products/comments" %>
      </div>
    </div>
	</div>

	<div class="container pad-top-half pad-bottom-half">
    <div class="btn second-btn">
      <a><%= link_to 'Back', products_path %></a>
    </div>
  </div>
</section>