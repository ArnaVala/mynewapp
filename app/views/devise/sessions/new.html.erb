<section class="lightpink-bg pad-top pad-bottom-half" id="login-page">
  
  <%= flash[:notice] %>

  <div class="container login-form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="col-sm-12" id="inner-form">
      <h4><strong>Please sign in</strong></h4>
      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true %>
      </div>
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
    </div>
      <%= render "devise/shared/links" %>
  </div>
</section>
      


    
